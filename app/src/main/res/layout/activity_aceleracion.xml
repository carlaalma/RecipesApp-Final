<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        app:itemBackground="@color/transparent"
        app:itemIconTint="@color/navigation_item_color"
        app:itemRippleColor="@color/transparent"
        app:itemTextColor="@color/navigation_item_color"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu"

        />
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white">


    <!-- Título -->
    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medición de Aceleración"
        android:textSize="52sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="16dp"/>

    <!-- Aceleración Actual -->
    <TextView
        android:id="@+id/txt_aceleracion_actual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceleración Actual: 0.00 m/s²"
        android:textSize="28sp"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingBottom="8dp"/>

    <!-- Aceleración Media -->
    <TextView
        android:id="@+id/txt_aceleracion_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceleración Media: 0.00 m/s²"
        android:textSize="28sp"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingBottom="8dp"/>

    <!-- Tiempo en Movimiento -->
    <TextView
        android:id="@+id/txt_tiempo_movimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiempo en Movimiento: 0 ms"
        android:textSize="28sp"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingBottom="8dp"/>

    <!-- Timestamp del Inicio del Movimiento -->
    <TextView
        android:id="@+id/txt_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio del Movimiento: -"
        android:textSize="28sp"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingBottom="16dp"/>

    <!-- Botón para Reiniciar -->
    <Button
        android:id="@+id/btn_reiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reiniciar Medición"
        android:padding="10dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:textSize="26sp"/>
    <Button
        android:id="@+id/btn_estadisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Estadísticas"
        android:padding="10dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:textSize="26sp"/>

</LinearLayout>
</LinearLayout>