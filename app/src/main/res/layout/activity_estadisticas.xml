<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EstadisticasActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            app:itemBackground="@color/transparent"
            app:itemIconTint="@color/navigation_item_color"
            app:itemRippleColor="@color/transparent"
            app:itemTextColor="@color/navigation_item_color"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_nav_menu"

            />

        <TextView
            android:id="@+id/txt_aceleracion_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceleración Media: "
            android:textSize="16pt"
            android:textStyle="bold"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/txt_aceleracion_maxima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceleración Máxima: "
            android:textSize="16pt"
            android:textStyle="bold"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/txt_tiempo_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiempo Total en Movimiento: "
            android:textSize="16pt"
            android:textStyle="bold"
            android:layout_margin="6dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>